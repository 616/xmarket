<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.dd.ShadowLayout
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:sl_shadowRadius="4dp"
        app:sl_shadowColor="#AA000000"
        app:sl_dx="0dp"
        app:sl_dy="0dp"
        app:sl_cornerRadius="56dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_card">
        <TextView
            android:id="@+id/deal_title"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text=""/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/deal_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginRight="15dp"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/author_img"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignTop="@+id/deal_img"
            android:layout_toEndOf="@id/deal_img"
            android:layout_toRightOf="@id/deal_img"
            android:layout_marginTop="@dimen/spacing_tiny"
            android:layout_marginRight="15dp"/>


        <TextView
            android:id="@+id/author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info_phone"
            android:textSize="@dimen/font_size_small"
            android:layout_alignBottom="@+id/author_img"
            android:layout_toEndOf="@+id/author_img"
            android:layout_marginBottom="20dp" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_small"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/textView" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card">
        <TextView
            android:id="@+id/deal_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text=""/>

    </RelativeLayout>
    </com.dd.ShadowLayout>
</LinearLayout>