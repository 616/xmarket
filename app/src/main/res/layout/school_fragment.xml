<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/deal_page_bg"
    android:layout_height="match_parent">

        <ListView
            android:id="@+id/school_deal_list"
            android:layout_marginTop="@dimen/school_divider_height"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/school_divider_margin"
            android:layout_marginRight="@dimen/school_divider_margin"
            android:dividerHeight="@dimen/school_divider_height"
            android:divider="@color/deal_page_bg"
            android:scrollbars="none"
            android:focusable="false" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/school_deal_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        app:borderWidth="0dp"
        app:fabSize="normal"
        app:backgroundTint="@color/md_grey_800"
        app:rippleColor="@color/black"
        app:elevation="6dp"
        app:pressedTranslationZ="18dp"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_plus_white" />
</FrameLayout>