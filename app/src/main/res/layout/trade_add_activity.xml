<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/colorPrimary"
       android:id="@+id/trade_add_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="70dp"
    android:layout_height="wrap_content">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/trade_add_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/spacing_huge"
        android:layout_marginLeft="@dimen/spacing_huge">

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/trade_add_title"
            android:inputType="text"
            android:maxLength="30"
            android:textSize="20sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/trade_add_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/spacing_huge"
        android:layout_marginLeft="@dimen/spacing_huge">

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/trade_add_price"
            android:maxLines="1"
            android:maxLength="8"
            android:inputType="number"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/trade_add_desp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/spacing_huge"
        android:layout_marginLeft="@dimen/spacing_huge">

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:maxLines="4"
            android:maxLength="128"
            android:hint="@string/trade_add_desp"
            android:inputType="textMultiLine"/>
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/trade_add_tag_select"
        style="@style/MaterialLoginTheme.SelectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_normal"
        android:text="@string/trade_add_tag"
        android:gravity="center_horizontal"
        android:textSize="20sp" />

    <me.jcala.xmarket.view.ScrollGridView
        android:id="@+id/trade_add_pics_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:verticalSpacing="2dp"
        android:scrollbars="none"
        android:horizontalSpacing="2dp"
        android:numColumns="3"
        />


    <TextView
        android:id="@+id/trade_add_photo_take"
        style="@style/MaterialLoginTheme.SelectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_normal"
        android:text="@string/trade_add_photo"
        android:gravity="center_horizontal"
        android:textSize="20sp" />

</LinearLayout>

</ScrollView>