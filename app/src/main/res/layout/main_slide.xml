<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card"
        android:layout_marginTop="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/info_avatar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="16dp"
            android:src="@mipmap/avatar" />

        <TextView
            android:id="@+id/info_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/info_avatar"
            android:layout_toEndOf="@id/info_avatar"
            android:layout_toRightOf="@id/info_avatar"
            android:layout_marginTop="@dimen/spacing_tiny"
            android:text="@string/info_username"
            android:textSize="@dimen/font_size_normal_high"
            android:textColor="@color/gray_dark"
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/info_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/info_avatar"
            android:layout_toRightOf="@id/info_avatar"
            android:layout_alignBottom="@id/info_avatar"
            android:layout_marginBottom="@dimen/spacing_tiny"
            android:text="@string/info_phone"
            android:textSize="@dimen/font_size_small"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/line_info_uncomplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_line">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/info_uncomplete"
            android:textSize="@dimen/font_size_normal_high"
            android:textColor="@color/gray_dark"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/ic_arrow_right"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

        <LinearLayout
            android:id="@+id/line_info_sell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_line">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/info_sell"
                android:textSize="@dimen/font_size_normal_high"
                android:textColor="@color/gray_dark"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/ic_arrow_right"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="vertical"
        android:layout_marginTop="32dp">

        <LinearLayout
            android:id="@+id/line_info_school"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/bottom_line">

            <TextView
                android:id="@+id/tv_grade"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/info_school"
                android:textSize="@dimen/font_size_normal_high"
                android:textColor="@color/gray_dark"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/line_info_donation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_line">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/info_donation"
                android:textSize="@dimen/font_size_normal_high"
                android:textColor="@color/gray_dark"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/ic_arrow_right"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/line_info_sold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_line">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/info_sold"
                android:textSize="@dimen/font_size_normal_high"
                android:textColor="@color/gray_dark"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/ic_arrow_right"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/line_info_buy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_line">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/info_bought"
                android:textSize="@dimen/font_size_normal_high"
                android:textColor="@color/gray_dark"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/ic_arrow_right"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/line_info_team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_line">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/info_team"
                android:textSize="@dimen/font_size_normal_high"
                android:textColor="@color/gray_dark"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/ic_arrow_right"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>